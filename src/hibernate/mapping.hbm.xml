    <?xml version="1.0" encoding="utf-8"?>
    <!DOCTYPE hibernate-mapping PUBLIC 
     "-//Hibernate/Hibernate Mapping DTD//EN"
     "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

    <hibernate-mapping>
        <class name="hibernate.Person" table="person">
            <meta attribute="class-description">
                This class contains the person details 
            </meta>
            <id name="id" type="int" column="id">
                <generator class="increment"/>
            </id>
            <property name="ime" column="ime" type="string"/>
            <property name="brojgodina" column="brojgodina" type="int"/>
            <property name="adresa" column="adresa" type="string"/>
            <property name="dohotak" column="dohotak" type="int"/>
        </class>
    </hibernate-mapping>

